pipeline {
    agent any
    environment {
        notifyEmail = "gagan4march@gmail.com"
    }
    tools {
        // Specify the Maven tool installation using the 'Tool' step
        Maven 'apache-maven-3.6.3'
    }
    triggers {
        cron('0 06 * * *')
    }
    stages {
        stage("code checkout") {
            steps {
                bat "echo helloo"
            }
        }
        stage("code build") {
            steps {
                bat "mvn clean"
            }
        }
        stage("unit test") {
            steps {
                bat "mvn test"
            }
        }
    }
    post {
        success {
            bat "echo success"
        }
    }
}
